<UserControl x:Class="Leem.Testify.CodeMarkGlyph"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="16" d:DesignWidth="16" Background="Transparent">
    <UserControl.Resources>

    </UserControl.Resources>
    <Canvas x:Name="LayoutRoot">
        <Grid>
        <Ellipse Stroke="Green" Height="12" Width="12" x:Name="Ellipse" Canvas.Left="0" Canvas.Top="0">
            <Ellipse.Fill>
                <RadialGradientBrush
                    GradientOrigin="0.25, 0.15">
                    <GradientStop Color="LimeGreen" Offset="0.2" />
                    <GradientStop Color="Green" Offset="0.9" />
                </RadialGradientBrush>
            </Ellipse.Fill>
            </Ellipse>
            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Top" Padding="0" FontWeight="SemiBold" x:Name="GlyphCharacter"/>
        </Grid>
    </Canvas>
</UserControl>