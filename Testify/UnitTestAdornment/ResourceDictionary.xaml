<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:shell="clr-namespace:Microsoft.VisualStudio.Shell;assembly=Microsoft.VisualStudio.Shell.14.0">
    <SolidColorBrush x:Key="BorderBrush" Color="{DynamicResource {x:Static shell:VsColors.DropDownBorderKey}}"/>
    <SolidColorBrush x:Key="BackgroundBrush" Color="{DynamicResource {x:Static shell:VsColors.ScrollBarBackgroundKey}}"/>
    <SolidColorBrush x:Key="TextBrush" Color="{DynamicResource {x:Static shell:VsColors.MenuTextKey}}"/>
    
</ResourceDictionary>